KOHA_INSTANCE=production

# Puertos
KOHA_INTRANET_PORT=8081
KOHA_OPAC_PORT=8080
KOHA_INTRANET_PREFIX=
KOHA_INTRANET_SUFFIX=
KOHA_OPAC_PREFIX=
KOHA_OPAC_SUFFIX=

# Servicios
MEMCACHED_SERVERS=memcached:11211
MB_HOST=rabbitmq
MB_PORT=61613
MB_USER=koha
MB_PASS=RabbitMQ#2024$Queue123
RABBITMQ_PASSWORD=RabbitMQ#2024$Queue123
