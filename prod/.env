# Configuración de producción para Koha Docker
# Este archivo contiene variables sensibles - NO commitear a git

# Base de datos MariaDB
MARIADB_ROOT_PASSWORD=super_secure_root_password_2025
KOHA_DB_PASSWORD=koha_secure_password_prod_2025

# RabbitMQ
RABBITMQ_PASSWORD=rabbitmq_secure_password_2025

# Configuración de Koha
KOHA_INSTANCE=default

# Configuración de dominio
KOHA_DOMAIN=localhost
KOHA_INTRANET_PORT=8081
KOHA_INTRANET_PREFIX=""
KOHA_INTRANET_SUFFIX=""
KOHA_OPAC_PORT=8080
KOHA_OPAC_PREFIX=""
KOHA_OPAC_SUFFIX=""

# Configuración de base de datos para Koha
MYSQL_SERVER=db
MYSQL_USER=koha_prod
MYSQL_PASSWORD=${KOHA_DB_PASSWORD}
DB_NAME=koha_production

# Configuración de Memcached
MEMCACHED_SERVERS=memcached:11211
USE_MEMCACHED=yes

# Configuración de RabbitMQ/Message Broker
MB_HOST=rabbitmq
MB_PORT=61613
MB_USER=koha
MB_PASS=${RABBITMQ_PASSWORD}

# Configuración de Zebra
ZEBRA_MARC_FORMAT=marc21
ZEBRA_LANGUAGE=en
BIBLIOS_INDEXING_MODE=dom
AUTHORITIES_INDEXING_MODE=dom

# Elasticsearch (opcional - deshabilitado por defecto)
USE_ELASTICSEARCH=false
ELASTICSEARCH_HOST=elasticsearch

# Idiomas a instalar
KOHA_LANGS=es-ES en

# SIP2 Configuration (si se necesita)
SIP_ENABLED=false
SIP_PORT=8023

# Configuración de backup
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Backup diario a las 2 AM

# Timezone
TZ=America/Mexico_City
