# ==========================================================
# CONFIGURACIÓN DE PRODUCCIÓN - DEBIAN 13 - KOHA DOCKER
# ==========================================================

# Database Configuration
KOHA_DB_NAME=koha_production
KOHA_DB_USER=pjnadmin_koha
KOHA_DB_PASSWORD=pjnadmin_db_2024!

# MariaDB Root Password
MARIADB_ROOT_PASSWORD=pjnadmin_root_2024!

# RabbitMQ Configuration
RABBITMQ_DEFAULT_USER=pjnadmin_rabbit
RABBITMQ_DEFAULT_PASS=pjnadmin_rabbit_2024!

# Koha Instance Configuration
KOHA_INSTANCE=biblioteca
KOHA_LANGS=es-ES
TIMEZONE=America/Argentina/Buenos_Aires

# Network Configuration
KOHA_STAFF_PORT=8081
KOHA_OPAC_PORT=8080
MYSQL_PORT=3306
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# Paths Configuration for Debian 13
DATA_PATH=/opt/koha-docker/data
LOGS_PATH=/var/log/koha-docker
CONFIG_PATH=/etc/koha-docker
BACKUP_PATH=/opt/koha-docker/backups

# SSL Configuration
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/koha.crt
SSL_KEY_PATH=/etc/ssl/private/koha.key

# Domain Configuration
KOHA_DOMAIN=biblioteca.local
OPAC_DOMAIN=catalogo.local

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=25
SMTP_USER=pjnadmin_mail
SMTP_PASSWORD=pjnadmin_mail_2024!

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2:00 AM
BACKUP_COMPRESSION=true

# Performance Tuning for Debian 13
MYSQL_INNODB_BUFFER_POOL_SIZE=1G
MYSQL_MAX_CONNECTIONS=200
MYSQL_INNODB_LOG_FILE_SIZE=256M
MEMCACHED_MEMORY=256m

# Security Configuration
RESTART_POLICY=unless-stopped
COMPOSE_PROJECT_NAME=koha-prod

# Monitoring and Logging
LOG_LEVEL=INFO
LOG_ROTATION=daily
LOG_MAX_SIZE=100m
LOG_MAX_FILES=7

# Debian 13 Specific
DEBIAN_VERSION=13
DOCKER_COMPOSE_VERSION=v2
USE_SYSTEMD=true

# Resource Limits
KOHA_MEMORY_LIMIT=2g
KOHA_CPU_LIMIT=2
DB_MEMORY_LIMIT=2g
DB_CPU_LIMIT=2