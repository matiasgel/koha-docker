# Configuración específica de producción
# Este archivo extiende la configuración base de files/

# Configuración de red para producción
KOHA_PLACK_NAME=koha
KOHA_ES_NAME=es

# Configuraciones adicionales para producción
# Deshabilitar funciones de desarrollo
DEBUG=0
KOHA_PROVE_CPUS=1

# Configuración de recursos
PLACK_WORKERS=5
PLACK_MAX_REQUESTS=1000

# Configuración de logging para producción
LOG_LEVEL=warn
ENABLE_PLACK_DEBUG=0

# Configuración de seguridad
SECURE_COOKIES=1
FORCE_HTTPS=0  # Cambiar a 1 si se usa HTTPS

# Configuración de correo (actualizar según sea necesario)
SMTP_SERVER=localhost
SMTP_PORT=25
SMTP_USER=""
SMTP_PASS=""
SMTP_AUTH=0

# Configuración de límites
MAX_UPLOAD_SIZE=100M
MAX_IMPORT_RECORDS=10000
