# Configuración de MariaDB optimizada para Koha en producción

[mysqld]
# Configuración básica
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
default-storage-engine = InnoDB

# Configuración de memoria
innodb_buffer_pool_size = 1G
innodb_log_file_size = 256M
innodb_log_buffer_size = 64M
innodb_flush_log_at_trx_commit = 2

# Configuración de conexiones
max_connections = 200
max_user_connections = 190
thread_cache_size = 50
table_open_cache = 4000

# Configuración de query cache
query_cache_type = 1
query_cache_size = 64M
query_cache_limit = 8M

# Configuración de temporary tables
tmp_table_size = 128M
max_heap_table_size = 128M

# Configuración de binary logs (para replicación)
log-bin = mysql-bin
binlog_format = ROW
expire_logs_days = 7
max_binlog_size = 500M

# Configuración de slow query log
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2
log_queries_not_using_indexes = 1

# Configuración de InnoDB
innodb_file_per_table = 1
innodb_flush_method = O_DIRECT
innodb_lock_wait_timeout = 50
innodb_rollback_on_timeout = 1

# Configuración de optimización
sort_buffer_size = 4M
read_buffer_size = 2M
read_rnd_buffer_size = 8M
myisam_sort_buffer_size = 128M

# Configuración de seguridad
sql_mode = STRICT_TRANS_TABLES,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER,NO_ENGINE_SUBSTITUTION

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4
